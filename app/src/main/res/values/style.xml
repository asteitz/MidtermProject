<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  This file's purpose is for storing the redundant style choices assigned to the buttons
          and limiting the main amount of code in the driver xml file.
      -->

    <!--  Used for the symbol buttons and has a symbol action defied for those buttons  -->
    <style name="buttonPG">
        <!--   layout_weight is used to allocated the space needed in layout   -->
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/pg</item>
        <item name="android:textColor">@android:color/white</item>

    </style>
